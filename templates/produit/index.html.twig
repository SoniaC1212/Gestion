{% extends "base_front.html.twig" %}

{% block body %}

{% include "partials/header_user.html.twig" %}
{% include "partials/footer_user.html.twig" %}
<main class="ttr-wrapper">

    <div class="bg-light p-3">
        <h1>Les produits</h1>
    </div>

    <div class="row">
        {% for c in produit %}
            <div class="col-4 mt-4">
                <div class="border border-dark rounded p-2 clearfix">
                    <h2>
                        {{ c.NomProduit }}
                        -
                        {{ c.PrixProduit }}
                        â‚¬
                    </h2>
                    <img class="img-fluid rounded" src="{{ c.ImageProduit }}" alt="Image de {{ c.NomProduit }}">
                    <hr>
                    <a href="{{ path('add_cart', {'id': c.id}) }}" class="btn btn-success float-right">
                        <i class="fas fa-shopping-cart mr-1"></i>
                        Ajouter
                    </a>
                </div>

            </div>
        {% endfor %}
    </div>
{% endblock %}
