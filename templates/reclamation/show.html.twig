{% extends 'home/index.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block section %}
<div class="table-wrapper" style="margin :50px;">
    <h1>Reclamation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Cin</th>
                <td>{{ reclamation.cin }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ reclamation.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reclamation.email }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reclamation.date ? reclamation.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ reclamation.type }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ reclamation.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_index') }}">back to list</a>

    <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">edit</a>

    {{ include('reclamation/_delete_form.html.twig') }}
    </div>
{% endblock %}
