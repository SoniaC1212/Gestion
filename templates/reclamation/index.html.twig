{% extends 'home/index.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block stylesheets %}

	<link rel="stylesheet" href="{{ asset('back/css/style.css') }}"/>
{% endblock %}

{% block section %}
<div class="table-wrapper" style="margin :50px;">
    <h1>Reclamation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Cin</th>
                <th>Username</th>
                <th>Email</th>
                <th>Date</th>
                <th>Type</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.cin }}</td>
                <td>{{ reclamation.username }}</td>
                <td>{{ reclamation.email }}</td>
                <td>{{ reclamation.date ? reclamation.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reclamation.type }}</td>
                <td>{{ reclamation.description }}</td>
                <td>
                    <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}">show</a>
                    <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_new') }}">Create new</a>
    </div>
{% endblock %}
